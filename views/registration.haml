!!!
%html
	%head
		:javascript
			function Validate() {
				var password = document.getElementById("pwd1").value
				var confirmPassword = document.getElementById("pwd2").value
				if (password != confirmPassword) {
				alert("Passwords do not match.")
				return false
				}
				return true
			}
		

	%body
		%div
			.mycontainer
				.row
					%form{:action => "/registration", :method => "post"}
						.align-center
							%h2 Registration Page
							%br
						.form-group
							%input#userid1.form-control{:placeholder => "User id", :type => "email", :required =>"",:name => "email"}
							%br
							%br
						.form-group
							%input#userid2.form-control{:placeholder => "User name", :type => "text", :required =>"",:name => "name"}
							%br
							%br
						.form-group
							%input#userid3.form-control{:placeholder => "mobile number", :type => "number", :required =>"",:name => "mobile"}
							%br
							%br
						.form-group
							%input#pwd1.form-control(placeholder="Password" type="password" name="password" required)
							%br
							%br
							%input#pwd2.form-control(placeholder="Confirm Password" type="password" name="cpassword" required onmouseleave = 'Validate()')
						.align-center
							- if flash[:error]
								%p
									= flash[:error]
						.align-center
							%button#submit.btn.btn-default{:type => "submit"} Register
							%button#reset.btn.btn-default{:type => "reset"} Reset
							%br
							%br
							%a{:href => '/home'} Back To Login
						
