%html
	%head
		%title welcome
		
	%body
		-if login?
			%h1= "Welcome #{@username}"
			.logoutLblPos
				%a{:href => "/logout"} Logout
			.dropdown
				%button.dropbtn Home
				.dropdown-content
					%a{:href => "/index"} Home
				
			.dropdown
				%button.dropbtn Categories
				.dropdown-content
					%a{:href => "/create_cat"} Create Category
					%a{:href => "/viewAllCategories"} View All Category
					%a{:href => "/changeCategories"} Change Name of Category
