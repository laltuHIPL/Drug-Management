				%button.dropbtn Products
				.dropdown-content
					%a{:href => "/addNewDrug"} Add New Drug
					%a{:href => "/viewDrugs"} View Drugs
					%a{:href => "/updateDrug"} Update Drug Detail
			.dropdown
				%button.dropbtn Orders
